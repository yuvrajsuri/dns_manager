<% layout("/layouts/boilerplate") %>

<style>
    body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

h1 {
    text-align: center;
    margin-top: 20px;
    color: #333;
}

form {
    max-width: 500px;
    margin: 20px auto;
    padding: 20px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

form div {
    margin-bottom: 15px;
}

label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
}

input[type="text"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

button {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}

</style>

<body>
    <h1>Edit Record</h1>
    <form action="/records/<%= record._id %>?_method=PUT" method="POST">
        <div>
            <label for="domain">Domain:</label>
            <input type="text" id="domain" name="domain" value="<%= record.domain %>" required>
        </div>
        <div>
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" value="<%= record.type %>" required>
        </div>
        <div>
            <label for="value">Value:</label>
            <input type="text" id="value" name="value" value="<%= record.value %>" required>
        </div>
        <div>
            <button type="submit">Save Changes</button>
        </div>
    </form>
</body>
